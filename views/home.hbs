<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css">

<style>
    .center{
        display:block;
        margin-left: auto;
        margin-right: auto; 
    }
</style>



<h1 style ="text -align: center;">Coronavirus country wise Data:</h1>

{{#each info as |val key| }}


<h2 style="text-align: center;">{{val.country}}</h2>
<h3 style="text-align: center;"class="text-warning">Total cases:{{val.casses}}</h3>
<h4 style="text-align: center;"class="text-success">Total Recovered:{{val.recovered}}</h4>
<h5 style="text-align: center;"class="text-danger">Total Deaths:{{val.deaths}}</h4>
<img class= "center"src="{{val.countryInfo.flag}}"/><br>

{{/each}}